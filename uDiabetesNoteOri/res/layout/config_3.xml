<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/sub_title"
		android:id="@+id/relativeLayout_config_3_1">

		<Button android:text=""
			android:id="@+id/button_config_3_back"
			android:background="@drawable/prev_selector"
			android:layout_centerVertical="true"
			android:layout_marginLeft="16px"
			android:layout_marginTop="30px"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"></Button>
		<TextView android:textColor="#ffffff"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:gravity="center_horizontal"
			android:textSize="18dip"
			android:textStyle="bold"
			android:text="초진 결과" />
<!-- 
		<Button android:text=""
			android:id="@+id/button_config_3_hosp"
			android:background="@drawable/hosp_selector"
			android:layout_marginRight="16px"
			android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"></Button>

 -->
	</RelativeLayout>

	<ScrollView android:id="@+id/scrollview_config_3"
		android:layout_below="@+id/relativeLayout_config_3_1"
		android:layout_height="fill_parent"
		android:background="#FFFFFF"
		android:layout_width="wrap_content">
		
	    <TableLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_alignParentLeft="true"
				    android:layout_alignParentTop="true"
				    android:layout_marginLeft="10dp" 
				    android:layout_marginTop="5dp"
				    android:stretchColumns="*">

				    <TableRow
				        android:id="@+id/tableRow1"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content" >
				        
				    <TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#000000"
						android:textSize="18dp"
						android:id="@+id/textview_config_3_jindan"
						android:text="최초진단일" />
					<EditText
						android:id="@+id/edittext_config_3_jindan"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:textSize="18dp"
						android:layout_span="3"
						android:layout_marginLeft="4dip"
						android:focusable="false"
						android:inputType="date">
					</EditText>
				        			        
				    </TableRow>

				    <TableRow
				        android:id="@+id/tableRow2"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content" >
					
				    <TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#000000"
						android:textSize="18dp"
						android:id="@+id/textview_config_3_height"
						android:text="키" />
					<EditText
						android:id="@+id/edittext_config_3_height"
						android:layout_height="wrap_content"
						android:textSize="18dp"
						android:layout_span="3"
						android:layout_marginLeft="4dip"
						android:inputType="numberDecimal">
					</EditText>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#000000"
						android:layout_toRightOf="@+id/edittext_config_3_height"
						android:layout_marginRight="5dip"
						android:id="@+id/textview_config_3_cm"
						android:text="cm" /> 
				        	        
				    </TableRow>

				    <TableRow
				        android:id="@+id/tableRow3"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content" >

				    <TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#000000"
						android:textSize="18dp"
						android:id="@+id/textview_config_3_weight"
						android:text="몸무게" />
					<EditText
						android:id="@+id/edittext_config_3_weight"
						android:layout_height="wrap_content"
						android:textSize="18dp"
						android:layout_span="3"
						android:layout_marginLeft="4dip"
						android:inputType="numberDecimal">
					</EditText>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="20dp"
						android:textColor="#000000"
						android:layout_toRightOf="@+id/edittext_config_3_weight"
						android:layout_marginRight="5dip"
						android:id="@+id/textview_config_3_kg"
						android:text="kg" />
					
					</TableRow>
				    
				    <TableRow
				        android:id="@+id/tableRow4"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content" >
					
				    <TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#000000"
						android:textSize="18dp"
						android:id="@+id/textview_config_3_bmi"
						android:text="체질량지수" />
					<EditText
						android:id="@+id/edittext_config_3_bmi"
						android:layout_width="130dp"
						android:layout_height="wrap_content"
						android:textSize="18dp"
						android:layout_span="3"
						android:layout_marginLeft="3dip"
						android:focusable="false"
						android:inputType="numberDecimal">
					</EditText>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#000000"
						android:layout_toRightOf="@+id/edittext_config_3_bmi"
						android:layout_marginRight="5dip"
						android:id="@+id/textview_config_3_kgm2"
						android:text="" />
				        
				    </TableRow>
				    
				    <TableRow
				        android:id="@+id/tableRow5"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content" >
					
				    <TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#000000"
						android:textSize="18dp"
						android:id="@+id/textview_config_3_waist"
						android:text="허리둘레" />
					<EditText
						android:id="@+id/edittext_config_3_waist"
						android:layout_height="wrap_content"
						android:textSize="18dp"
						android:layout_span="3"						
						android:layout_marginLeft="3dip"
						android:inputType="numberDecimal">
					</EditText>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#000000"
						android:layout_toRightOf="@+id/edittext_config_3_waist"
						android:layout_marginRight="5dip"
						android:id="@+id/textview_config_3_cm2"
						android:text="cm" />
				        
				    </TableRow>
				    
				    <TableRow
				        android:id="@+id/tableRow6"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content" >
					
				    <TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#000000"
						android:textSize="18dp"
						android:id="@+id/textview_config_3_hba1c"
						android:text="당화혈색소" />
					<EditText
						android:id="@+id/edittext_config_3_hba1c"
						android:layout_height="wrap_content"
						android:textSize="18dp"
						android:layout_span="3"
						android:layout_toRightOf="@+id/textview_config_3_hba1c"
						android:layout_marginLeft="3dip"
						android:inputType="numberDecimal">
					</EditText>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#000000"
						android:layout_toRightOf="@+id/edittext_config_3_hba1c"
						android:layout_marginRight="5dip"
						android:id="@+id/textview_config_3_percent"
						android:text="%" />
				        
				    </TableRow>
				    
				    <TableRow
				        android:id="@+id/tableRow7"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content">
					
				    <TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#000000"
						android:textSize="18dp"
						android:id="@+id/textview_config_3_bp"
						android:text="혈압" />
					<EditText
						android:id="@+id/edittext_config_3_bp"
						android:layout_height="wrap_content"
						android:layout_marginLeft="3dip"
						android:textSize="18dp"
						android:inputType="numberDecimal">
					</EditText>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="#000000"
						android:layout_gravity="center"
						android:id="@+id/textview_config_3_slash"
						android:text="/" />
					<EditText
						android:id="@+id/edittext_config_3_bp_2"
						android:layout_height="wrap_content"
						android:layout_marginRight="3dip"
						android:inputType="numberDecimal">
					</EditText>
					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginRight="5dip"
						android:textColor="#000000"
						android:id="@+id/textview_config_3_mmhg"
						android:text="mmHg" />
				        
				    </TableRow>
				    
		</TableLayout>   
		 
	</ScrollView>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		style="@android:style/ButtonBar"
		android:gravity="center_horizontal|center_vertical"
		android:id="@+id/linearLayout_config_3_9">

		<Button android:text=""
			android:id="@+id/button_config_3_save"
			android:background="@drawable/save_selector"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"></Button>

		<Button android:text=""
			android:id="@+id/button_config_3_delete"
			android:layout_marginLeft="10px"
			android:layout_toRightOf="@+id/button_config_3_save"
			android:background="@drawable/delete_selector"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"></Button>

	</LinearLayout>

</RelativeLayout>
